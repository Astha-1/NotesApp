<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="wrap_content"
    android:id="@+id/ques_ans_fac"
    android:paddingTop="30dp">

    <android.support.v7.widget.CardView
        android:layout_width="280dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="10dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questions_fac"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_by_fac"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="190dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="280dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="12dp"
        android:layout_height="100dp"
        android:id="@+id/ans_card_fac"
        app:cardBackgroundColor="#4682B4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_fac"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer_by_fac"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="205dp"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:textColor="#000"
        android:background="@drawable/button2"
        android:text="Answer It"

        android:id="@+id/your_ans"/>




</LinearLayout>