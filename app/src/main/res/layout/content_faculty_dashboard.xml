<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemias.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fac"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.example.satyam.myapplication.faculty_activity">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        app:cardBackgroundColor="#f0f0f0"
        android:layout_marginTop="100dp">

        <Spinner
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/subject"

            android:spinnerMode="dropdown"/>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/unit"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="180dp"/>


        <EditText
            android:layout_width="290dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/box"
            android:layout_marginTop="90dp"
            android:hint="Description"
            android:textAlignment="center"
            android:textColorHint="#000"
            android:id="@+id/desc"
            />
        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:background="@drawable/button"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/select_file"
            android:text="Select Fiile"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected File :"
            android:id="@+id/sf"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="270dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selected_file"
            android:text="Not Selected"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="140dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"/>
        <Button
            android:background="@drawable/button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="190dp"
            android:id="@+id/upload"
            android:text="Upload"/>
    </android.support.v7.widget.CardView>



</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="70dp"
        android:layout_height="match_parent"
        android:id="@+id/recycler_about"/>


